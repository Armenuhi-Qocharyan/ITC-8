<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/screanPad"
    android:paddingRight="@dimen/screanPad"
    android:background="@color/white"
    android:weightSum="1">

    <EditText
        android:id="@+id/write_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:layout_gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textColorHint="@color/colorPrimary"
        android:hint="@string/typeText" />

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.005" />

    <ImageView
        android:id="@+id/send_smile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:layout_gravity="center_vertical"
        android:src="@drawable/send_smile" />

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.005" />

    <ImageView
        android:id="@+id/send_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:layout_gravity="center_vertical"
        android:src="@drawable/send_img35" />

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.005" />

    <ImageView
        android:id="@+id/send_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_gravity="center_vertical"
        android:src="@drawable/send_msg48_1"/>

</LinearLayout>